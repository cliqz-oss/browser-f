with Files("moz.configure"):
    BUG_COMPONENT = ("Core", "Build Config")

with Files("app.mozbuild"):
    BUG_COMPONENT = ("Core", "Build Config")

with Files("moz.build"):
    BUG_COMPONENT = ("Core", "Build Config")

with Files("confvars.sh"):
