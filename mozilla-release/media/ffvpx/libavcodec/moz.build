    if CONFIG['CPU_ARCH'] == 'x86' or CONFIG['CPU_ARCH'] == 'x86_64':
        DIRS += ['x86']
    elif CONFIG['CPU_ARCH'] == 'arm':
        DIRS += ['arm']

